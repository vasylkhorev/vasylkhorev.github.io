---
import {getTranslationBachelorThesis, bachelorThesis} from "../../i18n/translations/bachelor-thesis";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import "../../styles.css";
import {getLangFromUrl} from "../../i18n/utils";
const lang  = getLangFromUrl(Astro.url);

// Get the translation for the current language
const t = getTranslationBachelorThesis(lang);
export function getStaticPaths() {
    return bachelorThesis.map(t => ({params: t.params}));
}
---

<html lang={lang}>
<head>
    <meta charset="UTF-8"/>
    <link rel="icon" type="image/svg+xml" href="/edu.ico"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}>
    <title>{t["pageTitle"]}</title>
</head>

<script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>

<body class="text-black dark:text-gray-200 dark:bg-gray-900">
<Header/>
<div class="flex flex-col content-center items-center">
    <div class="mx-10 items-center sm:w-2/3">
        <h1 class="text-3xl sm:text-7xl text-center font-bold font-sans pt-10 sm:pt-32">{t["thesisTitle"]}</h1>
        <p class=" text-s sm:text-3xl mt-10 sm:mt-32 font-mono"><span class="font-semibold">{t["author.label"]}:</span> {t["thesisAuthor"]}</p>
        <p class=" text-s sm:text-3xl mt-2 font-mono"><span class="font-semibold">{t["thesis.supervisor"]}:</span> doc. RNDr. Ľubomír Antoni,
            PhD.</p>
        <p class="text-s sm:text-3xl mt-2 font-mono"><span class="font-semibold">{t["thesis.consultant"]}:</span> prof. RNDr. Stanislav Krajči,
            PhD.</p>
    </div>
    <div class="mt-10 inline-flex sm:justify-start w-4/5 sm:w-2/3 sm:mt-20 gap-5 sm:gap-10">
           <a href="/prezentacia_obhajoba.pdf">
               <button type="button"
                       class="font-mono  block rounded-md bg-gray-300 dark:bg-gray-800 px-3 py-2 text-base font-medium hover:bg-gray-400 dark:hover:bg-gray-700">
                   {t["presentation"]}</button>
           </a>
           <a href="/esej.pdf">
               <button type="button"
                       class="font-mono  block rounded-md bg-gray-300 dark:bg-gray-800 px-3 py-2 text-base font-medium hover:bg-gray-400 dark:hover:bg-gray-700">
                   {t["essay"]}</button>
           </a>
           <a href="/bakalarska_praca.pdf">
               <button type="button"
                       class="font-mono block rounded-md bg-gray-300 dark:bg-gray-800 px-3 py-2 text-base font-medium hover:bg-gray-400 dark:hover:bg-gray-700">
                   {t["thesis"]}</button>
           </a>
    </div>
</div>
<div class="mt-10 sm:mt-20 flex items-center justify-center">
    <div class="flex flex-col w-4/5 sm:w-2/3">
        <div class="text-2xl sm:text-3xl font-bold text-center underline underline-offset-8">{t["goals.label"]}</div>
        <div class="sm:text-2xl mt-10">
            <ul class="list-outside list-disc">
                <li>{t["goals.1"]}</li>
                <li>{t["goals.2"]}
                </li>
                <li>{t["goals.3"]}</li>
            </ul>
        </div>

        <div class="mt-10 text-2xl sm:text-3xl sm:mt-20 font-bold text-center"><a class="underline underline-offset-8 decoration-2 hover:decoration-4"
                href=`${t["ARwiki"]}`>{t["whatisAR"]}</a></div>
        <div class="flex justify-center flex-col sm:text-2xl my-10">
            {t["whatisAR.answer1"]}
            \[ \lbrace {t["cocaCola"]}  \rbrace \Rightarrow \lbrace {t["chips"]} \rbrace \]
            {t["whatisAR.answer2"]}
        </div>
    </div>
</div>

<Footer/>
</body>
</html>