---
import {AIS_URL, FACULTY, PUBLIC_INFORMATICS_URL, UNIVERSITY} from "../i18n/urls";
import {getTranslationExperience} from "../i18n/translations/experience";

const {lang} = Astro.props;

const t = getTranslationExperience(lang)
---
<div class="text-base sm:text-2xl">
    <ul class="list-outside list-disc">
        <li>
            <div>
                <a href={AIS_URL} class="underline hover:decoration-2 font-bold">AiS2</a>
                <div class="font-light dark:text-gray-400 mt-3">2023 - {t["now"]}</div>
                <div class="mt-3 bold ">{t["pt_developer"]}: SOAP WS, fullstack</div>
                <hr class="mt-3"/>
                <div class="mt-3">{t["ais"]}
                </div>
            </div>
        </li>
    </ul>
</div>